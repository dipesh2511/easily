<main>
    <div class="container-fluid mx-0" id="main-box-container">
        <div class="row d-flex justify-content-center align-items-start" id="main-box-info">
            <div class="container main-box m-5 mx-3 d-flex align-items-start p-3">
                <div class="row">
                    <div class="col-12 mb-2">
                        <h1 class="fs-1 fw-lighter font-monospace heading-colors"> A comprehensive platform for reliable
                        </h1>
                    </div>
                    <div class="col-12 mb-2 " id="rotatingtext-container">
                        <h2 id="rotatingtext" class="fs-3 font-monospace fw-normal"> Job opportunities and internships.
                        </h2>
                    </div>
                    <div class="col-12 mb-2 ">
                        <h4 class="fs-6 fw-light font-monospace text-white"> Get Discovered. Get Hired. </h4>
                    </div>
                    <div class="col-12 d-flex justify-content-start">
                        <div class="col-12 m-1">
                            <%if(user){%>
                                    <a class="btn btn-style m-2 fs-5" href="/newjob">
                                        Post New Job
                                    </a>
                                <%}else{%>
                                        <a class="btn btn-style m-2 fs-5" href="/jobs">
                                            I'm a Job Seeker
                                        </a>
                                    <%}%>
                            
                            <%if(user){%>
                                <a class="btn btn-style m-2 fs-5" href="/jobs/<%=user.uid%>">
                                    Your Posted Job's
                                </a>
                                <%}else{%>
                                    <button class="btn btn-style m-2 fs-5" data-bs-target="#exampleModalToggle"
                                        data-bs-toggle="modal">I'm a Recruiter</button>
                                    <%}%>
                        </div>
                    </div>
                </div>
            </div>
            <div id="main-box-image-container">
                <div id="banner-image"></div>
            </div>
        </div>
        <div class="col-12" id="main-background"></div>
    </div>
</main>